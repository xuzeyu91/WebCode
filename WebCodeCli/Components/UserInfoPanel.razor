@using WebCodeCli.Domain.Domain.Model

@if (Show)
{
    <div class="mb-2 sm:mb-3 lg:mb-4 pb-2 sm:pb-3 lg:pb-4 border-b border-gray-200 flex items-center gap-2 sm:gap-3 flex-shrink-0 bg-gray-50 rounded-lg sm:rounded-xl p-2 sm:p-3 shadow-sm">
        <div class="flex-1 relative min-w-0">
                <select @bind="SelectedToolId" 
                    @bind:after="HandleToolChangedAsync"
                    class="w-full px-3 sm:px-4 py-2 sm:py-2.5 pr-8 sm:pr-10 border border-gray-200 rounded-lg sm:rounded-xl focus:outline-none focus:ring-1 focus:ring-gray-500 focus:border-gray-500 text-xs sm:text-sm font-medium bg-white hover:border-gray-400 transition-all shadow-sm hover:shadow-md appearance-none cursor-pointer">
                @foreach (var tool in AvailableTools)
                {
                    <option value="@tool.Id">@tool.Name - @tool.Description</option>
                }
            </select>
            <div class="absolute inset-y-0 right-0 flex items-center px-2 sm:px-3 pointer-events-none">
                <svg class="w-3 h-3 sm:w-4 sm:h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
            </div>
        </div>

        <a href="@GitHubUrl"
           target="_blank"
           rel="noopener noreferrer"
           class="btn-default text-[10px] sm:text-xs flex items-center gap-1 sm:gap-1.5 shadow-sm hover:shadow-md transition-shadow px-2 sm:px-3 py-1.5 sm:py-2 flex-shrink-0"
           title="@GitHubTitle">
            <svg class="w-3 h-3 sm:w-4 sm:h-4" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
            </svg>
            <span class="hidden sm:inline">@GitHubText</span>
        </a>

        <div class="relative flex-shrink-0">
            <button @onclick="OnToggleUserDropdown" 
                    @onclick:stopPropagation="true"
                    class="flex items-center gap-2 p-1.5 sm:p-2 rounded-lg sm:rounded-xl hover:bg-gray-200 transition-all cursor-pointer"
                    title="@CurrentUsername">
                <div class="w-8 h-8 sm:w-10 sm:h-10 bg-gray-700 rounded-full flex items-center justify-center shadow-md">
                    <svg class="w-4 h-4 sm:w-5 sm:h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                </div>
                <svg class="w-3 h-3 sm:w-4 sm:h-4 text-gray-500 transition-transform @(ShowUserDropdown ? "rotate-180" : "")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
            </button>

            @if (ShowUserDropdown)
            {
                <div class="fixed inset-0 z-40" @onclick="OnCloseUserDropdown"></div>

                <div class="absolute right-0 top-full mt-2 w-56 bg-white rounded-xl shadow-2xl border border-gray-200 py-2 z-50 transform transition-all">
                    <div class="px-4 py-3 border-b border-gray-100">
                        <div class="text-[10px] sm:text-xs text-gray-500 font-medium">@CurrentUserLabel</div>
                        <div class="text-sm font-semibold text-gray-800 truncate">@CurrentUsername</div>
                    </div>

                    <div class="px-2 py-2 border-b border-gray-100">
                        <div class="px-2 py-1 text-[10px] sm:text-xs text-gray-500 font-medium">@LanguageLabel</div>
                        <div class="px-2">
                            @LanguageSwitcherContent
                        </div>
                    </div>

                    <button @onclick="OnOpenEnvConfig" 
                            class="w-full px-4 py-2.5 flex items-center gap-3 hover:bg-gray-50 transition-colors text-left">
                        <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        <span class="text-sm text-gray-700">@SettingsText</span>
                    </button>

                    <button @onclick="OnCheckForUpdate"
                            class="w-full px-4 py-2.5 flex items-center gap-3 hover:bg-gray-50 transition-colors text-left relative"
                            title="@CheckUpdateTitle">
                        <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                        </svg>
                        <span class="text-sm text-gray-700 font-mono">@($"v{CurrentVersion}")</span>
                        @if (HasUpdate)
                        {
                            <span class="absolute right-4 top-1/2 -translate-y-1/2 w-2 h-2 bg-red-500 rounded-full animate-pulse"></span>
                        }
                    </button>

                    <button @onclick="OnLogout" 
                            class="w-full px-4 py-2.5 flex items-center gap-3 hover:bg-red-50 transition-colors text-left">
                        <svg class="w-4 h-4 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                        </svg>
                        <span class="text-sm text-red-600">@LogoutText</span>
                    </button>
                </div>
            }
        </div>
    </div>
}

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public IReadOnlyList<CliToolConfig> AvailableTools { get; set; } = Array.Empty<CliToolConfig>();
    [Parameter] public string SelectedToolId { get; set; } = string.Empty;
    [Parameter] public EventCallback<string> SelectedToolIdChanged { get; set; }
    [Parameter] public EventCallback OnToolChanged { get; set; }

    [Parameter] public string GitHubUrl { get; set; } = string.Empty;
    [Parameter] public string GitHubTitle { get; set; } = string.Empty;
    [Parameter] public string GitHubText { get; set; } = "GitHub";

    [Parameter] public string CurrentUsername { get; set; } = string.Empty;
    [Parameter] public bool ShowUserDropdown { get; set; }
    [Parameter] public string CurrentUserLabel { get; set; } = string.Empty;
    [Parameter] public string LanguageLabel { get; set; } = string.Empty;
    [Parameter] public string SettingsText { get; set; } = string.Empty;
    [Parameter] public string CheckUpdateTitle { get; set; } = string.Empty;
    [Parameter] public string CurrentVersion { get; set; } = string.Empty;
    [Parameter] public bool HasUpdate { get; set; }
    [Parameter] public string LogoutText { get; set; } = string.Empty;

    [Parameter] public EventCallback OnToggleUserDropdown { get; set; }
    [Parameter] public EventCallback OnCloseUserDropdown { get; set; }
    [Parameter] public EventCallback OnOpenEnvConfig { get; set; }
    [Parameter] public EventCallback OnCheckForUpdate { get; set; }
    [Parameter] public EventCallback OnLogout { get; set; }

    [Parameter] public RenderFragment? LanguageSwitcherContent { get; set; }

    private async Task HandleToolChangedAsync()
    {
        await SelectedToolIdChanged.InvokeAsync(SelectedToolId);
        await OnToolChanged.InvokeAsync();
    }
}
